<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/splash">
    <FrameLayout
        android:id="@+id/splash_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/app"/>

    <TextView
        android:id="@+id/app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/ic_app"
        android:drawablePadding="@dimen/grid_5"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_tv0"
        android:textSize="@dimen/grid_18"
        android:text="快手菜食谱"
        android:paddingTop="@dimen/grid_20"
        android:paddingBottom="@dimen/grid_20"/>
</RelativeLayout>