<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_45"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/grid_45"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:scaleType="centerInside"
            android:src="@drawable/btn_back1"/>

        <TextView
            android:id="@+id/tv_top_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="关于"
            android:textColor="@color/text_color_tv0"
            android:textSize="@dimen/grid_18"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/grid_30"
        android:drawableLeft="@drawable/ic_app"
        android:drawablePadding="@dimen/grid_5"
        android:gravity="center"
        android:text="快手菜食谱"
        android:textColor="@color/text_color_tv0"
        android:textSize="@dimen/grid_20"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/grid_25"
        android:layout_marginRight="@dimen/grid_25"
        android:layout_marginTop="@dimen/grid_20"
        android:lineSpacingExtra="@dimen/grid_5"
        android:text="        欢迎使用快手菜食谱。本应用是一款菜谱大全软件。涵盖了万种菜色供您选择，如果您每天还在为做什么菜以及如何做一道好菜而烦恼，“快手菜食谱”可以满足你的需要。简单易学是它的特性。"
        android:textColor="@color/text_color_tv1"
        android:textSize="@dimen/grid_16"/>

    <View
        style="@style/LineStyle"
        android:layout_marginLeft="@dimen/grid_25"
        android:layout_marginRight="@dimen/grid_25"
        android:layout_marginTop="@dimen/grid_40"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/grid_25"
        android:layout_marginRight="@dimen/grid_25"
        android:paddingBottom="@dimen/grid_10"
        android:paddingTop="@dimen/grid_10"
        android:text="当前版本号：4.2"
        android:textColor="@color/text_color_tv1"
        android:textSize="@dimen/grid_16"/>
    <View
        style="@style/LineStyle"
        android:layout_marginLeft="@dimen/grid_25"
        android:layout_marginRight="@dimen/grid_25"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/grid_25"
        android:layout_marginRight="@dimen/grid_25"
        android:paddingBottom="@dimen/grid_10"
        android:paddingTop="@dimen/grid_10"
        android:text="联系QQ：916288484"
        android:textColor="@color/text_color_tv1"
        android:textSize="@dimen/grid_16"/>
    <View
        style="@style/LineStyle"
        android:layout_marginLeft="@dimen/grid_25"
        android:layout_marginRight="@dimen/grid_25"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/grid_25"
        android:layout_marginRight="@dimen/grid_25"
        android:paddingBottom="@dimen/grid_10"
        android:paddingTop="@dimen/grid_10"
        android:text="联系邮箱：916288484@qq.com"
        android:textColor="@color/text_color_tv1"
        android:textSize="@dimen/grid_16"/>
    <View
        style="@style/LineStyle"
        android:layout_marginLeft="@dimen/grid_25"
        android:layout_marginRight="@dimen/grid_25"/>
</LinearLayout>