<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/grid_5"
    android:paddingLeft="@dimen/grid_5"
    android:paddingRight="@dimen/grid_5">

    <ping.Lib.widgets.RoundedImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/grid_130"
        android:layout_height="@dimen/grid_130"
        android:scaleType="centerCrop"
        android:src="@drawable/image_default"
        app:sriv_left_bottom_corner_radius="@dimen/grid_5"
        app:sriv_left_top_corner_radius="@dimen/grid_5"
        app:sriv_oval="false"
        app:sriv_right_bottom_corner_radius="@dimen/grid_5"
        app:sriv_right_top_corner_radius="@dimen/grid_5"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/grid_10"
        android:layout_marginTop="@dimen/grid_5"
        android:layout_toRightOf="@+id/iv_image"
        android:text="New Text"
        android:textColor="@color/text_color_tv0"
        android:textSize="@dimen/grid_16"/>

    <TextView
        android:id="@+id/tv_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="@dimen/grid_10"
        android:layout_marginTop="@dimen/grid_7"
        android:layout_toRightOf="@+id/iv_image"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/grid_5"
        android:maxLines="2"
        android:text="New Text"
        android:textColor="@color/text_color_tv2"
        android:textSize="@dimen/grid_15"/>

    <TextView
        android:id="@+id/tv_tintro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tags"
        android:layout_marginLeft="@dimen/grid_10"
        android:layout_marginTop="@dimen/grid_7"
        android:layout_toRightOf="@+id/iv_image"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/grid_5"
        android:maxLines="2"
        android:text="New Text"
        android:textColor="@color/text_color_tv2"
        android:textSize="@dimen/grid_15"/>

    <View
        style="@style/LineStyle"
        android:layout_below="@+id/iv_image"
        android:layout_marginTop="@dimen/grid_5"/>

</RelativeLayout>
