<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/grid_190">

    <ping.Lib.layout.RoundTextView
        android:id="@+id/rtv_steps"
        android:layout_width="@dimen/grid_75"
        android:layout_height="@dimen/grid_30"
        android:layout_marginLeft="@dimen/grid_10"
        android:gravity="center"
        android:text="第一步"
        android:textColor="@color/white"
        android:textSize="@dimen/grid_16"
        app:rv_backgroundColor="@color/mainColor"
        app:rv_cornerRadius="@dimen/grid_14"/>

    <View
        android:id="@+id/view2"
        android:layout_width="@dimen/grid_5"
        android:layout_height="@dimen/grid_160"
        android:layout_below="@+id/rtv_steps"
        android:layout_marginLeft="@dimen/grid_30"
        android:background="@color/mainColor"/>

    <ping.Lib.widgets.RoundedImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/grid_130"
        android:layout_height="@dimen/grid_130"
        android:layout_marginTop="@dimen/grid_10"
        android:layout_marginLeft="@dimen/grid_10"
        android:layout_below="@+id/rtv_steps"
        android:layout_toEndOf="@+id/view2"
        android:layout_toRightOf="@+id/view2"
        android:scaleType="centerCrop"
        android:src="@drawable/image_default"
        app:sriv_left_bottom_corner_radius="@dimen/grid_5"
        app:sriv_left_top_corner_radius="@dimen/grid_5"
        app:sriv_oval="false"
        app:sriv_right_bottom_corner_radius="@dimen/grid_5"
        app:sriv_right_top_corner_radius="@dimen/grid_5"/>

    <TextView
        android:id="@+id/tv_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/grid_10"
        android:layout_marginRight="@dimen/grid_10"
        android:lineSpacingExtra="@dimen/grid_5"
        android:paddingBottom="@dimen/grid_10"
        android:maxLines="5"
        android:ellipsize="end"
        android:paddingTop="@dimen/grid_10"
        android:text="New Text"
        android:textColor="@color/text_color_tv1"
        android:textSize="@dimen/grid_14"
        android:layout_alignTop="@+id/iv_image"
        android:layout_toRightOf="@+id/iv_image"
        android:layout_toEndOf="@+id/iv_image"
        android:layout_alignBottom="@+id/iv_image"/>
</RelativeLayout>
